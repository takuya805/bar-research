<div class=mypage>
  <%= render 'user/users/sidebar', user: @user %>
<main>
   <div class="field mb-5" style="color:#A2CA36; font-size:50px;font-family: 'Monotype Corsiva';">Mypage</div>
   <div class="myprofile">MyProfile</div>
    <div class="mine">
     <div class="profile">
        <div class="field mb-3">
            <%= label_tag :'イメージ' %><br />
            <%= attachment_image_tag(@user, :image, size: '100x100', fallback: "no_image.jpg") %>
        </div>
        <div class="field mb-3" style= "border-bottom: solid;">
            <%= label_tag :'ニックネーム' %><br />
            <%= @user.name %>
        </div>
        <div class="field mb-3" style="border-bottom: solid;">
            <%= label_tag :'自己紹介' %><br />
            <%= @user.introduction %>
        </div>

         <% if @user == current_user %>
        <div class="field">
            <%= link_to '編集', edit_user_path, class: "btn btn-outline-success mb-3" %>
        </div>
        <% end %>
         </div>

        <table class="table ml-3">
            <tr>
                <td>投稿したレビュー</td><td><%= current_user.reviews.count %>件</td>
            </tr>
            <tr>
                <td>お気に入り登録したレビュー</td><td><%= current_user.favorites.count %>件</td>
            </tr>
            <tr>
                <td>ブックマークしたバー</td><td><%= current_user.bookmarks.count %>件</td>
            </tr>
            <tr>
                <td>チャットした人数</td><td><%= current_user.rooms.count %>件</td>
            </tr>
        </table>
        <% unless @user == current_user %>
            <%= link_to 'チャットを始める', chat_path(@user), "data-turbolinks":false %>
        <% end %>
    </div>
</main>
</div>
