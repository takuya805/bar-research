<div class="container">
  <div class="row">
    <div class="col">
    <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :プロフィール画像 %><br />
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :自己紹介 %><br />
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit '更新' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
