<div class="container">
  <div class="row">
    <div class="col">
       <% if @user.errors.any? %>
      <div style="color:red;">
        <h2><%= @user.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
    <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :プロフィール画像 %><br />
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :自己紹介 %><br />
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit '更新' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
