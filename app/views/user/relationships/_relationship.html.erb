<% if user_signed_in? %>
  <% if tweet.user.followed_by?(current_user) %>
    <span>フォロー</span><%= link_to user_relationships_path(user_id: tweet.user.id, tweet_id: tweet.id), remote: true, method: :delete, style: 'color:#0099FF;' do %>
    <i class="fas fa-thumbs-up"></i>
    <% end %>
  <% else %>
  <span>フォロー</span><%= link_to user_relationships_path(user_id: tweet.user.id, tweet_id: tweet.id), remote: true, method: :post, style: 'color:#0099FF;' do %>
    <i class="far fa-thumbs-up"></i>
    <% end %>
  <% end %>
<% end %>