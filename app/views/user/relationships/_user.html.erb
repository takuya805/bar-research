<% if user_signed_in? %>
  <% if user.followed_by?(current_user) %>
    <%= link_to user_relationships_path(user_id: user.id), remote: true, method: :delete, style: 'font-size:15px;' do %>
     <i class="fas fa-thumbs-up"></i>フォロー外す
    <% end %>
  <% else %>
  <%= link_to user_relationships_path(user_id: user.id), remote: true, method: :post, style: 'font-size:15px;' do %>
    <i class="far fa-thumbs-up"></i>フォローする
    <% end %>
  <% end %>
<% end %>