<% if user_signed_in? %>
  <% if tweet.favorited_by?(current_user) %>
  <p><%= link_to tweet_favorites_path(tweet_id: tweet.id), remote: true, method: :delete, style: 'color:#FF0066;' do %>
    ♥<%= tweet.favorites.count %></p>
     <% end %>
  <% else %>
  <p><%= link_to tweet_favorites_path(tweet.id), remote: true, method: :post, style: 'color:#FF0066;' do %>
    ♡<%= tweet.favorites.count %></p>
    <% end %>
  <% end %>
<% else %>
<p><span>お気に入り数</span><%= tweet.favorites.count %></p>
<% end %>