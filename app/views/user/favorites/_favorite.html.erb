<% if user_signed_in? %>
  <% if review.favorited_by?(current_user) %>
  <p><span>お気に入り</span><%= link_to review_favorites_path(review_id: review.id), remote: true, method: :delete, style: 'color:#FF0066;' do %>
    ♥<%= review.favorites.count %></p>
     <% end %>
  <% else %>
  <p><span>お気に入り</span><%= link_to review_favorites_path(review.id), remote: true, method: :post, style: 'color:#FF0066;' do %>
    ♡<%= review.favorites.count %></p>
    <% end %>
  <% end %>
<% else %>
<p><span>お気に入り数</span><%= review.favorites.count %></p>
<% end %>