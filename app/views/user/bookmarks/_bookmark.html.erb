<% if user_signed_in? %>
  <% if shop.bookmarked_by?(current_user) %>
    <p><span>ブックマーク削除：</span><%= link_to shop_bookmarks_path(shop_id: shop.id), remote: true, method: :delete do %>★</p>
       <% end %>
  <% else %>
    <p><span>ブックマーク追加：</span><%= link_to shop_bookmarks_path(shop_id: shop.id), remote: true, method: :post do %>☆</p>
      <% end %>
  <% end %>
<% end %>
