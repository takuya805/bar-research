<% @rooms.each do |room| %>
  <% other_user = room.user_rooms.where.not(user_id: current_user.id).first.user %>
    <% latest_chat = room.chats.last %>
      <% if @chat.nil? %>
            <%= link_to chat_path(other_user) do %>
            <div class="mt-3" style="display:inline-block;"><%= other_user.name %><br />
              <%= latest_chat.message %>
               <i class="fas fa-sms" style="font-size:20px;"></i>
               <% end %>
            </div>
          <div class="mt-4" style="float: right; display:inline-block;">
            <%= link_to "削除", chats_exit_path(id: room.id), "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger' %>
          </div>
      <% end %>
<% end %>