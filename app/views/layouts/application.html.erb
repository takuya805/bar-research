<!DOCTYPE html>
<html>
  <head>
    <title>BarResearch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1ede0c26ab.js" crossorigin="anonymous"></script>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  </head>

  <body>
  <header>
      <nav class="navbar navbar-expand p-3">
      <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-info ml-5"  %>
        </li>
        <li>
          <%= link_to "マイページ", user_path(current_user), class: "btn btn-outline-info ml-5" %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-info ml-5" %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-info ml-5" %>
        </li>
        <li>
          <%= link_to 'テストユーザー', users_guest_sign_in_path, method: :post, class: "btn btn-outline-info ml-5" %>
        </li>
      <% end %>
      </ul>
      </nav>
    </header>
     <div>
       <%= flash[:notice] %>
       <%= flash[:alert] %>
     </div>

      <%= yield %>
      <fotter>
      </fotter>
  </body>
</html>
