<!DOCTYPE html>
<html>
  <head>
    <title>BarResearch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://underscorejs.org/underscore-min.js"></script>
    <script src="https://kit.fontawesome.com/1ede0c26ab.js" crossorigin="anonymous"></script>
    <script src="https://maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand p-5">
        <span id="desktop-menu">
        <%= link_to root_path do %>
          <% image_tag("logo.jpg", size: '100x80', class: "d-block mx-auto") %>
        <% end %>
        </span>
      <ul class="navbar-nav ml-auto" id="desktop-menu">
    <% if user_signed_in? %>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-info ml-5"  %>
        </li>
        <li>
          <%= link_to "マイページ", user_path(current_user), class: "btn btn-outline-info ml-5" %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-info ml-5" %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-info ml-5" %>
        </li>
         <li>
          <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "btn btn-outline-info ml-5" %>
        </li>
      <% end %>
      </ul>
      <ul class="navbar-nav ml-auto mysidebar mt-5" id="sp-menu">
    <% if user_signed_in? %>
        <li class="menu mb-3">
          <%= link_to destroy_user_session_path, method: :delete, style: "color:#A2CA36;" do %>
           <span><i class="fas fa-sign-out-alt"></i>Log out</span>
          <% end %>
        </li>
        <li class="menu mb-3">
          <%= link_to user_path(current_user), style: "color:#A2CA36;" do %>
          <span><i class="fas fa-home"></i>Home</span>
          <% end %>
        </li>
      <% else %>
        <li class="menu mb-3">
          <%= link_to new_user_registration_path, style: "color:#A2CA36;" do %>
            <span><i class="fas fa-user-plus"></i>Sign up</span>
          <% end %>
        </li>
        <li class="menu mb-3">
          <%= link_to new_user_session_path, style: "color:#A2CA36;" do %>
           <span><i class="fas fa-sign-in-alt"></i>Sign in</span>
          <% end %>
        </li>
         <li class="menu mb-3">
          <%= link_to users_guest_sign_in_path, method: :post, style: "color:#A2CA36;" do  %>
             <span><i class="fab fa-invision"></i>Guest Sign in</span>
          <% end %>
        </li>
      <% end %>
      </ul>
          <div id="hm-icon">
            <a class="menu-trigger" href="">
              <span></span>
              <span></span>
              <span></span>
            </a>
         </div>
      </nav>
    </header>
   <div class="flash-message">
     <%= flash[:notice] %>
     <%= flash[:alert] %>
   </div>
      <%= yield %>
      <fotter class="p-5 text-center">
        <p class="mt-3">©All rights reserved by Bar Research</p>
      </fotter>
  </body>
</html>
